{
  "name": "@kingmaker/contracts",
  "version": "0.0.1",
  "private": false,
  "description": "Solidity smart contracts for the Kingmaker protocol",
  "scripts": {
    "clean": "rimraf artifacts cache typechain",
    "lint:solidity": "solhint -f table contracts/**/*.sol",
    "prettier:solidity": "prettier --write contracts/**/*.sol",
    "build": "yarn clean && yarn run compile",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:dev": "hardhat run scripts/sample-script.js"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@openzeppelin/contracts": "^3.2.1-solc-0.7",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^2.0.0",
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.1.2",
    "ethers": "^5.0.19",
    "hardhat": "^2.0.2",
    "hardhat-typechain": "^0.3.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^3.0.0",
    "typechain-target-ethers-v5": "^1.2.2",
    "typescript": "^4.0.3"
  }
}

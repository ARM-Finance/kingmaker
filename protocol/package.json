{
  "name": "@kingmaker/contracts",
  "version": "0.0.1",
  "private": false,
  "description": "Solidity smart contracts for the Kingmaker protocol",
  "scripts": {
    "clean": "hardhat clean && rimraf artifacts cache typechain",
    "cleanse": "npm run clean && rimraf node_modules",
    "lint": "npm run lint:sol",
    "lint:sol": "solhint -f table contracts/**/*.sol",
    "prettier:sol": "prettier --write contracts/**/*.sol",
    "compile": "hardhat compile",
    "build": "npm run compile",
    "build:sol": "npm run clean && yarn run compile",
    "build:sol:uml": "sol2uml contracts",
    "test": "hardhat test",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage",
    "deploy:dev": "hardhat run scripts/sample-script.js"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "chai": "^4.3.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.30",
    "hardhat": "^2.0.9",
    "hardhat-typechain": "^0.3.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.4",
    "rimraf": "^3.0.2",
    "sol2uml": "^1.1.25",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typechain-target-ethers-v5": "^5.0.1",
    "typescript": "^4.1.4"
  }
}

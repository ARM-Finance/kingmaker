    "@openzeppelin/contracts": "^2.5.0"
  },
  "devDependencies": {
    "@openzeppelin/test-environment": "^0.1.2",
    "@openzeppelin/test-helpers": "^0.5.4",
    "mocha": "^7.0.0",
    "truffle-privatekey-provider": "^1.3.0",
    "verify-on-etherscan": "^1.2.1",
    "truffle": "^5.1.48"
  }
}

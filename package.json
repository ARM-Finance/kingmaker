{
  "name": "kingmaker",
  "version": "0.0.1",
  "private": true,
  "description": "The Kingmaker protocol and TypeScript library",
  "main": "index.js",
  "workspaces": [
    "kingmaker",
    "docs",
    "lib",
    "protocol"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "compile": "lerna run compile",
    "clean": "lerna run clean",
    "cleanse": "lerna run cleanse",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint",
    "publish-packages": "",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev --parallel --no-bail",
    "client:dev-server": "lerna run client:dev-server --no-bail",
    "client:dev": "lerna run client:dev --no-bail",
    "client:build": "lerna run build:webpack",
    "server:dev": "lerna run server:dev --no-bail"
  },
  "keywords": [
    "kingmaker",
    "flashloan",
    "flash-loans",
    "defi",
    "ethereum",
    "web3"
  ],
  "author": "lepidotteri",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ARM-Finance/kingmaker.git"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "husky": "^1.1.2",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": ">=7.0.0"
  }
}
